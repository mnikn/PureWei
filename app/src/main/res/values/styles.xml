<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.Black">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorLightBlack</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <!-- Button holder -->
    <style name="buttonWeibo" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- TextView style -->
    <style name="baseTextView">
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColorLink">@color/colorLightBlue</item>
    </style>

    <style name="baseTextView.emphasizeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="baseTextView.emphasizeText.small">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="baseTextView.emphasizeText.medium">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="baseTextView.emphasizeText.large">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>


    <style name="baseTextView.additional" />
    <style name="baseTextView.additional.small">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
    <style name="baseTextView.additional.medium">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="baseTextView.additional.large">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="baseTextView.normal">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="baseTextView.normal.small">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="baseTextView.normal.medium">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="baseTextView.normal.large">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

</resources>
