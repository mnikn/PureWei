<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppThemeBlack" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/lightBlack</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    
    <!-- home view holder -->
    <style name="actionTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/text_drawable_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TextView style -->
    <style name="emphasizeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="emphasizeSmallText" parent="emphasizeText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="emphasizeNormalText" parent="emphasizeText">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>


    <style name="additionalText" />
    <style name="additionalSmallText" parent="additionalText">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="additionalNormalText" parent="additionalText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="normalText">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="normalSmallText" parent="normalSmallText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

</resources>
